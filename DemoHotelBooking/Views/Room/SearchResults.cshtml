@model List<DemoHotelBooking.ViewModels.RoomSearchViewModel>
@{
    ViewData["Title"] = "Kết Quả Tìm Kiếm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var searchParams = ViewBag.SearchParams as dynamic;
}


<style>
    .room-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15) !important;
    }

    .card-img-top {
        border-radius: 15px 15px 0 0;
    }

    .room-card {
        border: none;
        border-radius: 8px;
        width: 93%;
        transition: all 0.3s ease;
    }


    .btn-primary-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(255, 165, 0, 0.3);
        color: white;
    }

    .btn-outline-primary {
        color:white;
        border-color: var(--primary-color);
        color: var(--primary-color);
    }

        .btn-outline-primary:hover {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: white;
        }

    .badge.bg-primary-custom {
        background: linear-gradient(135deg, var(--primary-color) 0%, #FF8C00 100%) !important;
    }
</style>

<div class="container mt-4">
    <!-- Search Summary -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info border-0" style="background: linear-gradient(135deg, #FFA500 0%, #FF8C00 100%); color: white;">
                <div class="d-flex align-items-center">
                    <i class="fas fa-search me-3 fs-4"></i>
                    <div>
                        <h5 class="mb-1">Kết quả tìm kiếm</h5>
                        <p class="mb-0">
                            Tìm thấy <strong>@(searchParams?.ResultCount ?? 0)</strong> phòng phù hợp
                            @if (!string.IsNullOrEmpty(searchParams?.CheckIn))
                            {
                                <span class="ms-2">
                                    từ <strong>@DateTime.Parse(searchParams.CheckIn).ToString("dd/MM/yyyy")</strong>
                                    đến <strong>@DateTime.Parse(searchParams.CheckOut).ToString("dd/MM/yyyy")</strong>
                                </span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Back to Search -->
    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("Search", "Room")" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại tìm kiếm
            </a>
        </div>
    </div>
    <!-- Search Filters Applied -->
    @if (searchParams != null && (!string.IsNullOrEmpty(searchParams.Query) || !string.IsNullOrEmpty(searchParams.RoomType) || searchParams.MinPrice > 0 || searchParams.MaxPrice < 10000000))
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-3">
                        <h6 class="text-muted mb-2">Bộ lọc đã áp dụng:</h6>
                        <div class="d-flex flex-wrap gap-2">
                            @if (!string.IsNullOrEmpty(searchParams.Query))
                            {
                                <span class="badge bg-primary rounded-pill">
                                    <i class="fas fa-search me-1"></i>@searchParams.Query
                                </span>
                            }
                            @if (!string.IsNullOrEmpty(searchParams.RoomType))
                            {
                                <span class="badge bg-info rounded-pill">
                                    <i class="fas fa-bed me-1"></i>@searchParams.RoomType
                                </span>
                            }
                            @if (searchParams.Guests > 0)
                            {
                                <span class="badge bg-success rounded-pill">
                                    <i class="fas fa-users me-1"></i>@searchParams.Guests người
                                </span>
                            }
                            @if (searchParams.MinPrice > 0 || searchParams.MaxPrice < 10000000)
                            {
                                <span class="badge bg-warning text-dark rounded-pill">
                                    <i class="fas fa-money-bill me-1"></i>@searchParams.MinPrice.ToString("N0") - @searchParams.MaxPrice.ToString("N0") VNĐ
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- Room Results -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var room in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm border-0 room-card">
                        <!-- Room Image -->
                        <div class="position-relative overflow-hidden" style="height: 250px;">
                            @{
                                string imageSrc = room.ImageUrls != null && room.ImageUrls.Count > 0 && !string.IsNullOrEmpty(room.ImageUrls[0])
                                ? Url.Content(room.ImageUrls[0])
                                : (room.Id % 3 == 1
                                ? Url.Content("~/img/room-1.jpg")
                                : (room.Id % 3 == 2
                                ? Url.Content("~/img/room-2.jpg")
                                : Url.Content("~/img/room-3.jpg")));
                            }
                            <img src="@imageSrc"
                                 class="card-img-top w-100 h-100"
                                 style="object-fit: cover; transition: transform 0.3s ease;"
                                 alt="@room.Name"
                                 onmouseover="this.style.transform='scale(1.05)'"
                                 onmouseout="this.style.transform='scale(1)'"
                                 onerror="this.src='@Url.Content("~/img/no_image.jpg")'; this.alt='Không có hình ảnh';" />

                            <!-- Availability Badge -->
                            @if (room.IsAvailable)
                            {
                                <span class="badge bg-success position-absolute top-0 start-0 m-2">
                                    <i class="fas fa-check-circle me-1"></i>Có sẵn
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger position-absolute top-0 start-0 m-2">
                                    <i class="fas fa-times-circle me-1"></i>Đã đặt
                                </span>
                            }
                            <!-- Price Badge -->
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-primary fs-6 px-3 py-2" style="background: linear-gradient(135deg, #FFA500 0%, #FF8C00 100%) !important;">
                                    @room.Price.ToString("N0") VNĐ<small>/đêm</small>
                                </span>
                            </div>
                        </div>
                        <!-- Room Info -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-2" style="color: #FF8C00;">@room.Name</h5>
                            <div class="mb-2">
                                <span class="badge bg-light text-dark border">
                                    <i class="fas fa-tag me-1"></i>@room.Type
                                </span>
                                <span class="badge bg-light text-dark border ms-1">
                                    <i class="fas fa-users me-1"></i>@room.Capacity khách
                                </span>
                            </div>
                            <p class="card-text text-muted small flex-grow-1">
                                @(room.Description?.Length > 100 ? room.Description.Substring(0, 100) + "..." : room.Description)
                            </p>
                            <!-- Room Features -->
                            <div class="mb-3">
                                <div class="row text-center">
                                    <div class="col-4">
                                        <i class="fas fa-wifi" style="color: #FF8C00;"></i>
                                        <small class="d-block">@room.Extension</small>
                                    </div>
                                </div>
                            </div>
                            <!-- Action Buttons -->
                            <div class="mt-auto">
                                @if (room.IsAvailable)
                                {
                                    <div class="d-grid gap-2">
                                        <a href="@Url.Action("Details", "Room", new { id = room.Id })"
                                           class="btn btn-primary"
                                           style="background: linear-gradient(135deg, #FFA500 0%, #FF8C00 100%); border: none;">
                                            <i class="fas fa-eye me-2"></i>Xem chi tiết
                                        </a>
                                        <a href="@Url.Action("Booking", "Booking", new { roomId = room.Id, checkin = searchParams?.CheckIn, checkout = searchParams?.CheckOut })"
                                           class="btn btn-outline-primary"
                                           style="border-color: #FF8C00; color: #FF8C00;"
                                           onmouseover="this.style.background='#FF8C00'; this.style.color='white';"
                                           onmouseout="this.style.background='transparent'; this.style.color='#FF8C00';">
                                            <i class="fas fa-calendar-check me-2"></i>Đặt ngay
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-grid gap-2">
                                        <a href="@Url.Action("Details", "Room", new { id = room.Id })"
                                           class="btn btn-outline-secondary">
                                            <i class="fas fa-eye me-2"></i>Xem chi tiết
                                        </a>
                                        <button class="btn btn-secondary" disabled>
                                            <i class="fas fa-ban me-2"></i>Không có sẵn
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- No Results -->
            <div class="col-12">
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-search" style="font-size: 4rem; color: #ddd;"></i>
                    </div>
                    <h4 class="text-danger mb-3">Không tìm thấy phòng phù hợp với tiêu chí bạn chọn!</h4>
                    <p class="text-muted mb-4">Vui lòng kiểm tra lại số khách, loại phòng, hoặc khoảng giá. Có thể giá bạn nhập quá thấp hoặc loại phòng chưa tồn tại.</p>
                    <div class="d-flex gap-2 justify-content-center">
                        <a href="@Url.Action("Search", "Room")" class="btn btn-primary"
                           style="background: linear-gradient(135deg, #FFA500 0%, #FF8C00 100%); border: none;">
                            <i class="fas fa-search me-2"></i>Tìm kiếm mới
                        </a>
                        <a href="@Url.Action("Rooms", "Room")" class="btn btn-outline-primary"
                           style="border-color: #FF8C00; color: #FF8C00;"
                           onmouseover="this.style.background='#FF8C00'; this.style.color='white';"
                           onmouseout="this.style.background='transparent'; this.style.color='#FF8C00';">
                            <i class="fas fa-list me-2"></i>Xem tất cả phòng
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

