@{
    ViewData["Title"] = "Truy cập bị từ chối";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow border-danger">
                    <div class="card-header bg-danger text-white text-center">
                        <h4 class="mb-0">
                            <i class="fas fa-exclamation-triangle me-2"></i>Truy cập bị từ chối
                        </h4>
                    </div>
                    <div class="card-body text-center p-4">
                        <div class="mb-4">
                            <i class="fas fa-ban fa-5x text-danger mb-3"></i>
                            <h5>Bạn không có quyền truy cập trang này!</h5>
                            <p class="text-muted">
                                Trang bạn đang cố gắng truy cập yêu cầu quyền đặc biệt mà tài khoản của bạn không có.
                            </p>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Về trang chủ
                            </a>
                            <a asp-action="Login" class="btn btn-outline-secondary">
                                <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
