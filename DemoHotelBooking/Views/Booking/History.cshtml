@model IEnumerable<DemoHotelBooking.ViewModels.BookingView>

@{
    ViewData["Title"] = "Lịch sử đặt phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="bg-light p-5 mb-4">
                <h1 class="display-4">Lịch sử đặt phòng</h1>
                <p class="lead">Xem lại các đặt phòng của bạn</p>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center" role="alert">
                    <h4>Bạn chưa có đặt phòng nào</h4>
                    <p>Hãy khám phá các phòng tuyệt vời của chúng tôi!</p>
                    <a asp-controller="Room" asp-action="Rooms" class="btn btn-primary">Xem phòng</a>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm booking-card">
                                <div class="card-header bg-primary-custom text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-calendar"></i>
                                        Đặt phòng #@item.Booking.Id
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <small class="text-muted">Ngày đặt:</small>
                                        <div class="fw-bold">@item.Booking.CreateDate.ToString("dd/MM/yyyy HH:mm")</div>
                                    </div>
                                    
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <small class="text-muted">Nhận phòng:</small>
                                            <div class="fw-bold">@item.Booking.CheckinDate.ToString("dd/MM/yyyy")</div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Trả phòng:</small>
                                            <div class="fw-bold">@item.Booking.CheckoutDate.ToString("dd/MM/yyyy")</div>
                                        </div>
                                    </div>
                                    
                                    @if (item.Rooms?.Any() == true)
                                    {
                                        <div class="mb-3">
                                            <small class="text-muted">Phòng đã đặt:</small>
                                            <div>
                                                @foreach (var room in item.Rooms)
                                                {
                                                    <span class="badge bg-secondary me-1">@room.Room.Name</span>
                                                }
                                            </div>
                                        </div>
                                    }
                                    
                                    <div class="mb-3">
                                        <small class="text-muted">Tổng tiền:</small>
                                        <div class="h5 text-success mb-0">@((item.Booking.TotalPrice ?? 0).ToString("N0")) VNĐ</div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <span class="badge status-badge-@item.Booking.Status fs-6">
                                            @(item.Booking.Status == 1 ? "Chờ xác nhận" :
                                              item.Booking.Status == 2 ? "Đã xác nhận" :
                                              item.Booking.Status == 3 ? "Đã hủy" :
                                              item.Booking.Status == 4 ? "Hoàn thành" : "Không xác định")
                                        </span>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-grid gap-2">
                                        <a asp-action="BookingDetails" asp-route-id="@item.Booking.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i> Xem chi tiết
                                        </a>
                                        @if (item.Booking.Status == 1)
                                        {
                                            <a asp-action="CancelBooking" asp-route-id="@item.Booking.Id" 
                                               class="btn btn-outline-danger btn-sm"
                                               onclick="return confirm('Bạn có chắc chắn muốn hủy đặt phòng này?')">
                                                <i class="fas fa-times"></i> Hủy đặt phòng
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }
    .card:hover {
        transform: translateY(-5px);
    }
</style>
