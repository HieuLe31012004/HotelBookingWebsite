@model IEnumerable<DemoHotelBooking.Models.AppUser>
@{
    ViewData["Title"] = "Danh sách khách hàng";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Danh sách khách hàng</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Tạo tài khoản mới
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Tên đăng nhập</th>
                        <th>Số điện thoại</th>
                        <th>Họ và tên</th>
                        <th>Email</th>
                        <th>Giới tính</th>
                        <th>Ngày sinh</th>
                        <th>Địa chỉ</th>
                        <th>Đã đăng ký</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>
                                @if (item.Gender == true)
                                {
                                    <span class="badge bg-primary">Nam</span>
                                }
                                else if (item.Gender == false)
                                {
                                    <span class="badge bg-info">Nữ</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Chưa xác định</span>
                                }
                            </td>
                            <td>
                                @if (item.DoB.HasValue)
                                {
                                    @item.DoB.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Chưa cập nhật</span>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                            <td>
                                @if (item.IsRegisted)
                                {
                                    <span class="badge bg-success">Đã đăng ký</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Chưa đăng ký</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" 
                                       onclick="return confirm('Bạn có chắc muốn xóa tài khoản này?')">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Any())
        {
            <div class="text-center py-4">
                <i class="bi bi-inbox" style="font-size: 3rem; color: #6c757d;"></i>
                <p class="text-muted mt-3">Chưa có khách hàng nào trong hệ thống</p>
            </div>
        }
    </div>
</div>
