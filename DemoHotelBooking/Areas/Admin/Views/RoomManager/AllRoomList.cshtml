@model IEnumerable<DemoHotelBooking.Models.Room>
@{
    ViewData["Title"] = "AllRoomList";
    
}
<h1>Danh sách phòng</h1>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<a class="btn btn-warning" asp-area="Admin" asp-controller="RoomManager" asp-action="Create">Thêm phòng</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FloorNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Introduce)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DAP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MAP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FloorNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Introduce)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DAP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MAP)
                </td>
                <td>
                    <div class="d-flex align-items-center gap-2">
                        <a class="btn btn-info btn-sm" title="Xem chi tiết" asp-area="Admin" asp-controller="RoomManager" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i> Chi tiết
                        </a>
                        @if (item.Status != "Đang cọc" && item.Status != "Đang thuê")
                        {
                            <form asp-area="Admin" asp-controller="RoomManager" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa phòng này không?');">
                                <button type="submit" class="btn btn-danger btn-sm" title="Xóa phòng"><i class="fas fa-trash-alt"></i> Xóa</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">Không thể xóa</span>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
